<%= stylesheet_link_tag 'users' %>
<div class="edit_user page">
  <div class="title_part">
    <h1>Edit User</h1>
  </div>
  <div class="container">
    <%= form_with model: @user,url: user_path(current_user),local: true do |f| %>

      <div class = "form-row">
        <label class="col-sm-2"><%= f.label "Name" %></label>
        <%= f.text_field :name, autocomplete: "name", class: "col-sm-3" %>
      </div><br>

      <div class = "form-row">
        <label class = "col-sm-2"><%= f.label "Email" %></label>
        <%= f.email_field :email, autocomplete: "email", class: "col-sm-3" %>
      </div><br>

      <div class = "form-row">
        <label class = "col-sm-2"><%= f.label "Icon Image" %></label>
        <%= f.file_field :icon_img, autocomplete: "icon_img", class: "col-sm-3" %>
      </div><br>


      <div class="actions">
        <%= f.submit "Update", class: "btn simple_square_btn2 btn-lg" %>
      </div><br>
    <% end %>
  </div>
</div>
