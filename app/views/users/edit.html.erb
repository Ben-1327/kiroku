<%= stylesheet_link_tag 'users' %>
<div class="edit_user page">
  <h2>ユーザー情報編集</h2>
  <div class="container">
    <%= form_with model: @user,url: user_path(current_user), method: :put,local: true do |f| %>
      </ß%= render 'layouts/error_messages', model: f.object %>

      <div class = "form-row">
        <label class="col-sm-2"><%= f.label "名前(※必須)" %></label>
        <%= f.text_field :name, autocomplete: "name", class: "col-sm-3" %>
      </div><br>

      <div class = "form-row">
        <label class = "col-sm-2"><%= f.label "email(※必須)" %></label>
        <%= f.email_field :email, autocomplete: "email", class: "col-sm-3" %>
      </div><br>

      <div class = "form-row">
        <label class = "col-sm-2"><%= f.label "アイコン画像" %></label>
        <%= f.file_field :icon_img, autocomplete: "icon_img", class: "col-sm-3" %>
      </div><br>


      <div class="actions">
        <%= f.submit "保存", class: "btn btn-success btn-lg" %>
      </div><br>
    <% end %>
  </div>
</div>
