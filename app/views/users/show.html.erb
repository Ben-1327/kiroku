<%= stylesheet_link_tag 'users' %>

<div class="user_show page">
  <div class="container">
    <div class="row user_header">
      <div class="col-sm-1"></div>
      <div class="col-sm-2 icon_img">
        <% if @user.icon_img.present? %>
          <%= image_tag @user.icon_img.to_s, class:"user_icon" %>
        <% else %>
          <%= image_tag 'default_icon.jpg', class:"default_icon"%>
        <% end %>
      </div>
      <div class="col-sm-6 name_space">
        <h2><%= @user.name %></h2>
      </div>
      <div class="col-sm-2 edit_space">
        <div class="edit_btn">
          <% if @user == current_user %>
            <%= link_to "Edit", edit_user_path(current_user), class: "btn btn-primary" %>
          <% end %>
        </div>
        <div class="col-sm-1"></div>
      </div>
    </div>
    <div class="btn_space">
      <div class="row">
        <div class="col post_btn">
          <% if @user == current_user %>
            <%= link_to "New Kiroku", new_user_post_path(current_user),class: "btn btn-primary" %>
          <% end %>
        </div>
        <div class="col new_cate_btn">
          <% if @user == current_user %>
            <%= link_to "New Category", new_user_category_path(current_user), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="kiroku_index">
      <h2><%= @user.name %>'s kiroku</h2>
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Title</th>
            <th>Content</th>
            <th>Link</th>
            <th>Category</th>
            <th>Show</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= l post.created_at %></td>
              <td><%= post.title %></td>
              <td><%= post.content.truncate(25) %></td>
              <td><%= link_to "Link", post.quotation, target: :_blank %></td>
              <td><%= post.category.name %></td>
              <td><%= link_to "Show", user_post_path(post.user, post), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="show_kiroku_btn">
        <%= link_to "Kiroku Index",user_posts_path(@user), class: "btn btn-primary kiroku_btn" %>
      </div>
    </div>
  </div>
</div>
