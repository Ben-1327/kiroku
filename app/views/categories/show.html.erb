<%= stylesheet_link_tag 'categories' %>

<div class="category_show page">
  <div class="title_part">
    <h1><%= @category.name %></h1>
  </div>
  <div class="container">
    <div class="kiroku_index">
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Title</th>
            <th>Content</th>
            <th>Quotation</th>
            <th>Category</th>
            <th>Show</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= l post.created_at %></td>
              <td><%= post.title %></td>
              <td><%= post.content.truncate(25) %></td>
              <td><%= link_to "Quotation", post.quotation, target: :_blank %></td>
              <td><%= post.category.name %></td>
              <td><%= link_to "Show", user_post_path(post.user, post), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
          </%= paginate @posts %>
        </tbody>
      </table>
    </div>
  </div>
</div>
