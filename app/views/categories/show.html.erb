<%= stylesheet_link_tag 'categories' %>

<div class="category_show page">
  <div class="main">
    <div class="title_part">
      <h1><%= @category.name %></h1>
    </div>
    <div class="container">
      <div class="kiroku_index">
        <table>
          <thead>
            <tr>
              <th>日付</th>
              <th>タイトル</th>
              <th>内容</th>
              <th>引用</th>
              <th>カテゴリー</th>
              <th>詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= l post.created_at %></td>
                <td><%= post.title %></td>
                <td><%= post.content %></td>
                <td><%= link_to "引用元", post.quotation, target: :_blank %></td>
                <td><%= post.category.name %></td>
                <td><%= link_to "詳細", user_post_path(post.user, post), class: "btn btn-primary" %></td>
              </tr>
            <% end %>
            </%= paginate @posts %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
